	"YII:Render": {
		"prefix": "render",
		"body": [
		  "<?php echo $this->render('/elements/bottom-card-two.php',[",
		  "\t'title' => 'Got questions?',",
		  "\t'linktext1' => 'Support',",
		  "\t'url1' => '/support.htm',",
		  "\t'linktext2' => 'Forum',",
		  "\t'url2' => '/forum'",
		  "]);?>"
		],
		"description": "YII render"
	},
	"YII:Alias": {
		"prefix": "alias",
		"body": [
			"<?= Yii::getAlias('@img/subdir/picture.png') ?>"
		],
		"description": "YII img path alias"
	},
	"YII: IMG": {
		"prefix": "img",
		"body": [
			"<?= Html::img('@img/', [",
			"\t'alt' => 'text',",
			"]); ?>"
		],
		"description": "Yii image function"
	},
		"YII: A": {
		"prefix": "link",
		"body": [
			"<?= Html::a(",
				"\t'Link text',",
				"\t'@img/articles/provisioning/rule-based-automation.png',",
				"\t['rel' => 'lightbox', 'class' => ''])",
			"?>"
		],
		"description": "Yii Link"
	},
		"YII: A>Link": {
		"prefix": "linkimg",
		"body": [
			"<?=",
			"\tHtml::a(",
			"\t\tHtml::img('@img/', [",
				"\t\t\t'alt' => '',",
			"\t\t]),",
			"\t'@img/',",
			"\t['rel' => 'lightbox', 'class' => ''])",
			"?>"
		],
		"description": "Yii Link with IMG"
	},
		"PHP: Tags": {
		"prefix": "php",
		"body": [
			"<?php",
			"?>"
		],
		"description": "Yii Link"
	},
